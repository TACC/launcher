    else:
      lout.write(line)
  except IndexError:
    print("There was a line with no command. Skipping this line.")
  except CommandNotFoundException:
    print("The line `{}` contained an error with the command. Skipping this line.".format(line[:-1]))
bout.close()
lout.close()

# offloading files to BOINC
print
