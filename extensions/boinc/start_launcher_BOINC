# Setup the batch
breq = submit_api.CREATE_BATCH_REQ()
breq.project = project_url
breq.authenticator = project_auth
breq.app_name = "herd"
breq.batch_name = "herd-{}-{}".format(getpass.getuser(),uuid.uuid4())
